rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default rule: Deny all reads and writes to all collections by default.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read-only access to the 'courses' collection
    match /courses/{courseId} {
      allow get, list: if true;
      allow write: if false;
    }
    
    // Allow public read-only access to the 'instructors' collection
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow write: if false;
    }
  }
}
